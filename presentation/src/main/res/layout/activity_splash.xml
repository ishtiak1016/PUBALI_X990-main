<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/color_gray_blue"
    tools:context="com.vfi.android.payment.presentation.view.activities.SplashActivity">

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"

        android:src="@color/color_white"
        tools:alpha="1" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_bg_reflective_light"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="100dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash_reflective_light"
        tools:alpha="1" />

    <ImageView
        android:visibility="invisible"
        android:id="@+id/iv_bg_down_hexagon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash_down_hexagon"
        tools:alpha="1" />

    <ImageView
        android:visibility="gone"
        android:id="@+id/iv_bg_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="26dp"
        android:scaleType="centerCrop"
        android:scaleX="0"
        android:scaleY="0"
        android:src="@drawable/bg_splash_point"
        tools:alpha="1" />


    <ImageView

        android:id="@+id/iv_bg_up_hexagon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash_up_hexagon"
        android:visibility="invisible"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"

        android:scaleX="0"
        android:scaleY="0"
        android:src="@drawable/pubali_logo"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/iv_mid_point1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="75dp"
        android:layout_marginRight="50dp"
        android:alpha="0"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_mid_point"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/iv_little_point1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:alpha="0"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_little_point"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/iv_mid_point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="20dp"
        android:alpha="0"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_mid_point"
        tools:alpha="1" />

    <ImageView
        android:id="@+id/iv_little_point2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:alpha="0"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_little_point"
        tools:alpha="1" />
</FrameLayout>
