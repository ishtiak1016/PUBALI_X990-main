<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_custom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imageview_dialog_logo"
        android:layout_gravity="center|top"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/icon_ask"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/tv_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/color_black"
        android:textSize="18sp"
        android:text="Warning" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:id="@+id/dialog_btn_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_dialog_left"
            android:layout_width="0dp"
            android:background="@color/color_white"
            android:layout_height="@dimen/dimen_button_height"
            android:layout_weight="1"
            android:textColor="@color/color_black"
            android:text="@string/button_cancel"/>
        <View
            android:id="@+id/view_line"
            android:layout_width="4dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_dialog_divider"/>
        <Button
            android:id="@+id/btn_dialog_right"
            android:layout_width="0dp"
            android:background="@color/color_white"
            android:layout_height="@dimen/dimen_button_height"
            android:layout_weight="1"
            android:textColor="@color/color_black"
            android:text="@string/button_confirm"/>
    </LinearLayout>
</LinearLayout>
