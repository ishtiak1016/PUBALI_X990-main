<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.activities.CheckCardActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_touch" />

            <TextView
                android:id="@+id/tv_desc_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_type"
                android:layout_marginTop="10dp"
                android:text="@string/tv_hint_tap"
                android:gravity="center"
                android:textColor="@color/color_dark_blue"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_cardin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/icon_cardin" />

            <TextView
                android:id="@+id/tv_desc_cardin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_type"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/tv_hint_insert"
                android:textColor="@color/color_dark_blue"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_swipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_swipe" />

            <TextView
                android:id="@+id/tv_desc_swipe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_type"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/tv_hint_swipe"
                android:textColor="@color/color_dark_blue"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <LinearLayout
        android:id="@+id/ll_amount_area"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_hint_amount"
            android:textColor="@color/color_white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tv_show_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="0.00"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_amount_text_size" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/tv_hint_currency"
            android:textColor="@color/color_white"
            android:textSize="24sp" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginTop="2dp"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginBottom="@dimen/dimen_btn_botton"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_button_height"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/bg_left_btn"
            android:text="@string/btn_hint_cancel"
            android:textAllCaps="false"
            android:textColor="@color/color_btn_left_hint"
            android:textSize="@dimen/dimen_button_textsize" />

        <Button
            android:id="@+id/btn_manual_input"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_button_height"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/bg_right_btn"
            android:text="@string/btn_hint_manual_input"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dimen_button_textsize"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>
