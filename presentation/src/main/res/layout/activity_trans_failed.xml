<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_failed" />

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/tv_hint_error"
        android:textAllCaps="true"
        android:textColor="@color/color_white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/tv_show_error_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:scrollbars="vertical"
        android:maxLines="5"
        android:textColor="@color/color_white"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_back_to_main_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_button_height"
        android:layout_marginLeft="@dimen/common_left_margin"
        android:layout_marginRight="@dimen/common_left_margin"
        android:layout_marginBottom="@dimen/dimen_btn_botton"
        android:textColor="@color/color_btn_left_hint"
        android:text="@string/btn_hint_back_to_main_menu"
        android:textSize="@dimen/dimen_button_textsize"
        android:layout_gravity="center"
        android:textAllCaps="false"
        android:background="@drawable/bg_left_btn"
        android:gravity="center"/>
</LinearLayout>
